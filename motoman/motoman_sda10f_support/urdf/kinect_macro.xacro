<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
	<xacro:macro name="kinect" params="name prefix">
	
		<!-- link list -->
	<link name="base_kinect">
		<visual>
			<geometry>
				<mesh filename="package://motoman_sda10f_support/meshes/camera/kinect_base.STL"/>
			</geometry>
			<origin xyz="-0.14 0 0"/>
			<material name="black">
				<color rgba="176 176 176 0.9"/>
			</material>
		</visual>
		<collision>
				<geometry>
					<mesh filename="package://motoman_sda10f_support/meshes/camera/kinect_collision.STL" />
				</geometry>
				<origin xyz= "-0.16 0 0"/>
				<material name="black">
					<color rgba="176 176 176 0.9"/>
				</material>
		</collision>
	</link>

	<link name="kinect">
		<visual>
			<geometry>
				<mesh filename="package://motoman_sda10f_support/meshes/camera/kinect_kinect.STL"/>
			</geometry>
			<origin xyz="-0.14 0 0"/>
			<material name="black">
				<color rgba="176 176 176 0.9"/>
			</material>
		</visual>
	</link>

