<?xml version="1.0" ?>
<launch>
       <arg name="view_cameras" default="false"/>
       <arg name="camera_number" default="1"/>

     <node pkg="target_finder" type="target_locator_srv" name="target_locator" output="screen" >
          <param name="image_topic" value="camera/rgb/image_rect_color" />
          <param name="target_type" value="2" />
          <param name="target_rows" value="5" />
          <param name="target_cols" value="5" />
          <param name="target_circle_dia" value="0.0254" />
          <param name="target_spacing" value="0.035" />
          <param name="focal_length_x" value="1050" />
          <param name="focal_length_y" value="1050"/>
          <param name="center_x" value="639" />
          <param name="center_y" value="479.5" />
          <param name="use_circle_detector" value="false"/>
          <param name="camera_name" value="camera/rgb"/>
     </node>
 
     <node pkg="target_finder" type="call_service" name="call_service" output="screen" >
           <param name="roi_width" value="1280"/>
           <param name="roi_height" value="1024"/>
           <param name="optical_frame" value="camera_rgb_optical_frame"/>
     </node>
 
     <!--node pkg="nodelet" type="nodelet" name="image_proc_nodelet$(arg camera_number)"  args="manager"/>
     <node pkg="nodelet" type="nodelet" name="rectify$(arg camera_number)" args="load image_proc/rectify image_proc_nodelet$(arg camera_number)">
        <remap from="camera_info" to="camera/rgb/camera_info"/>
        <remap from="image_mono" to="camera/rgb/rect_image_mono"/>
        <remap from="image_rect" to="camera/rgb/rect_image_color"/>
     </node-->

     <node pkg="image_view" type="image_view" name="debug_view" >
          <remap from="image" to="observer_raw_image"/>
     </node>

     <node pkg="tf" type="static_transform_publisher" name="target_frame" args="0.1 0.0 1.0 0.0 1.5708 0.0 world camera_rgb_optical_frame 100" />
     <node name="rviz" pkg="rviz" type="rviz" args="-d $(find target_finder)/config/target_finder_asus.rviz" required="true" />

</launch>
